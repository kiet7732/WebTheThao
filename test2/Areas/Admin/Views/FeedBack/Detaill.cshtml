
@model DoAn.Models.Chat
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thông tin đơn hàng</h1>
                </div>
                <div class="col-6">
                    <div class="float-right pt-1">
                        <a href="@Url.Action("Index", "Order")" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-circle-left"></i>&nbsp; Trở về danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết </h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Mã Nhận Xét:</strong> @Model.IdChat</p>
                    <p><strong>Ngày Gửi:</strong> @Model.NgayGui</p>
                    <p><strong>Tình Trạng:</strong> @Model.Status</p>
                </div>

                <div class="col-md-6">
                    <p><strong>Độ Hài Lòng:</strong> @Model.HaiLong</p>
                    <p><strong>Vấn Dề:</strong> @Model.VanDe</p>
                    <p><strong>Nội Dung:</strong> @Model.NoiDung</p>
                </div>
            </div>
        </div>
    </div>
</div>
