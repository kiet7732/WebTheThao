<div class="container min-vh-50 d-flex justify-content-center align-items-center">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <h4 class="text-center mb-4">Quên Mật Khẩu</h4>
        <p class="text-center text-muted">Nhập email của bạn để nhận liên kết đặt lại mật khẩu</p>

        <!-- Form gửi email -->
        <form method="post" asp-action="ForgotPassword" asp-controller="User">
            <div class="mb-3">
                <label for="email" class="form-label">Địa chỉ Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email của bạn" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Gửi Liên Kết</button>
        </form>

        <div class="text-center mt-3">
            @{

                if (Session["idUser"] == null)
                {
                    <a href="/User/LoginUser" class="text-decoration-none">Quay lại đăng nhập</a>
                }
                else
                {
                    <a href="/User/DanhSachHang" class="text-decoration-none">Quay lại </a>
                }
            }
        </div>
    </div>
</div>
